include "m8c.inc"


;--------------------------------------------------
; Constants for UART_CLOCK API's.
;--------------------------------------------------

UART_CLOCK_CONTROL_REG_START_BIT:          equ 0x01    ; Control register start bit
UART_CLOCK_INT_REG:                        equ 0x0e1
UART_CLOCK_INT_MASK:                       equ 0x01


;--------------------------------------------------
; Constants for UART_CLOCK user defined values
;--------------------------------------------------

UART_CLOCK_PERIOD:                         equ 0x7c
UART_CLOCK_COMPARE_VALUE:                  equ 0x3e


;--------------------------------------------------
; Register Address Constants for UART_CLOCK
;--------------------------------------------------

UART_CLOCK_COUNTER_REG:                equ 0x20   ; DR0 Counter register
UART_CLOCK_PERIOD_REG:                 equ 0x21   ; DR1 Period register
UART_CLOCK_COMPARE_REG:                equ 0x22   ; DR2 CompareValue register
UART_CLOCK_CONTROL_REG:                equ 0x23   ; Control register
UART_CLOCK_FUNC_REG:                   equ 0x20   ; Function register
UART_CLOCK_INPUT_REG:                  equ 0x21   ; Input register
UART_CLOCK_OUTPUT_REG:                 equ 0x22   ; Output register


;--------------------------------------------------
; UART_CLOCK Macro 'Functions'
;--------------------------------------------------

   macro UART_CLOCK_Start_M
   or    reg[UART_CLOCK_CONTROL_REG],  UART_CLOCK_CONTROL_REG_START_BIT
   endm

   macro UART_CLOCK_Stop_M
   and   reg[UART_CLOCK_CONTROL_REG], ~UART_CLOCK_CONTROL_REG_START_BIT
   endm

   macro UART_CLOCK_EnableInt_M
   M8C_EnableIntMask UART_CLOCK_INT_REG, UART_CLOCK_INT_MASK
   endm

   macro UART_CLOCK_DisableInt_M
   M8C_DisableIntMask UART_CLOCK_INT_REG, UART_CLOCK_INT_MASK
   endm


